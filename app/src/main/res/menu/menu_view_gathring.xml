<!--Menu shows up on the click on the Overview button on the View Gathring page-->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" tools:context="com.gathr.gathr.ViewGathring" android:id="@+id/vg_menu">

    <!--Shows up for the user who is gathring organizer to be able to edit gathring-->
    <item android:id="@+id/action_edit" android:title="Edit Event"
        android:orderInCategory="100" app:showAsAction="never" android:visible="false" />
    <!--Shows up for the user who is gathring organizer to be able to cancel gathring-->
    <item android:id="@+id/action_cancel" android:title="Cancel Event"
        android:orderInCategory="100" app:showAsAction="never" android:visible="false" />
    <!--Shows up for any user-->
    <item android:id="@+id/action_share" android:title="Share"
        android:orderInCategory="100" app:showAsAction="never" />
</menu>