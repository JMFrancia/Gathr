<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gathring_name_text"
                android:text="No input"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:textColor="#ff50b4c8"/>

            <TextView
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gathring_description_text"
                android:textStyle="italic"
                android:layout_margin="12dp"
                android:text="No Input"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10px">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gathring_address_header"
                        android:textStyle="bold"
                        android:text="Location"
                        android:layout_margin="10dp"
                        android:textSize="23dp"
                        android:layout_gravity="left"
                        android:textColor="#ff50b4c8"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageButton"
                        android:layout_gravity="right"
                        android:src="@drawable/location_icon"
                        android:onClick="showOnMap"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/gathring_address_header"
                        android:layout_toEndOf="@+id/gathring_address_header" />

                </RelativeLayout>




                <TextView
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_address_text"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:text="No Input" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_time_header"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="When"
                    android:textSize="23dp"
                    android:textColor="#ff50b4c8"/>

                <TextView
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_date_text"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:text="No Input" />
                <TextView
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_time_text"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:text="No Input"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_category_header"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Categories"
                    android:textSize="23dp"
                    android:textColor="#ff50b4c8"/>

                <TextView
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_category_text"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:text="No Input" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_limit_header"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Attendees"
                    android:textSize="23dp"
                    android:textColor="#ff50b4c8"/>
                <TextView
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gathring_limit_text"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:text="No Input"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#fff"
                >
                <com.devsmart.android.ui.HorizontalListView
                    android:id="@+id/listview"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="#fff"
                    />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Join"
                android:id="@+id/join_leave_button"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="joinOrLeave"
                android:background="#ff50b4c8"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Share"
                android:id="@+id/share"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="share"
                android:background="#ff50b4c8"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp" />
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:id="@+id/joinChat"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="openChat"
                android:background="#ff50b4c8"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>