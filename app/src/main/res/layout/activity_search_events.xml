<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gathr.gathr.SearchEvents"
    android:background="#ffffff">

<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/et_location"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:hint="Enter Location"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_categories"
        android:hint="Categories"
        android:editable="false"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_categories"
        android:layout_toLeftOf="@+id/btn_categories" />
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_categories"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="openCategory"
        android:background="#FFFFFF"
        android:maxHeight="36dp"
        android:maxWidth="36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/create_contact"
        android:layout_alignTop="@+id/et_categories"
        android:layout_alignRight="@+id/et_location"
        android:layout_alignEnd="@+id/et_location" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Change Time"
    android:id="@+id/btn_timefilter"
    android:onClick="getTimeFilter"
    android:background="@drawable/mybutton"
    android:textColor="#FFFFFF"
    android:textAllCaps="false"
    android:layout_alignTop="@+id/vw_time"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_toLeftOf="@+id/vw_time"
    android:layout_toStartOf="@+id/vw_time" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Search"
    android:id="@+id/btn_search"
    android:onClick="search"
    android:background="@drawable/mybutton"
    android:textColor="#FFFFFF"
    android:textAllCaps="false"
    android:layout_marginLeft="10dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/vw_time"
    android:textStyle="bold"
    android:textSize="20dp"
    android:text="12:00 PM"
    android:autoText="false"
    android:textColor="#ff50b4c8"
    android:layout_marginLeft="10dp"
    android:layout_below="@+id/btn_categories"
    android:layout_centerHorizontal="true" />




</RelativeLayout>
